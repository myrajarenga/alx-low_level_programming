CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
all: ${OBJ}
	${CC} -g ${CFLAGS} ${OBJ} -o ${NAME}
clean:
	${RM} ${NAME} *.swp *~	
oclean:
	${RM} ${OBJ}
fclean:clean
	$(RM) $(NAME)
re: fclean all

%.o: %.c mh
	$(CC) $(CFLAGS) -C $< -O $@
